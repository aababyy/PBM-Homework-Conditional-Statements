        switch (score2)
        {
            case 1:
            case 2:
            case 3:
                Console.WriteLine(score2 * 10); break;
            case 4:
            case 5:
            case 6:
                Console.WriteLine(score2 * 100); break;
            case 7:
            case 8:
            case 9:
                Console.WriteLine(score2 * 1000); break;
            default:
                Console.WriteLine("invalid score"); break;
        }
    */
    }
}
